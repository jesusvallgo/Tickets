<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_welcome_2"
    style="@style/general_layout_linear_vertical_nomargin_match_match"
    tools:context=".fragment.WelcomeFragment">

    <TabHost
        android:id="@+id/welcomeTabHost"
        style="@style/general_match_match">

        <LinearLayout
            android:id="@+id/welcomeTabHostMainContainer"
            style="@style/general_layout_linear_vertical_nomargin_match_match" >

            <TabWidget
                android:id="@android:id/tabs"
                style="@style/general_match_wrap"
                android:background="@color/colorPrimary"></TabWidget>

            <FrameLayout
                android:id="@android:id/tabcontent"
                style="@style/general_match_match" >

                <LinearLayout
                    android:id="@+id/welcomeTabCreateTicket"
                    style="@style/general_tabhost_content" >
                    <LinearLayout
                        android:id="@+id/welcome_btn_ticket_technical_support"
                        style="@style/general_button_icon_text_container">
                        <ImageView
                            style="@style/general_button_icon_text_icon"
                            android:src="@mipmap/ic_technical_support" />
                        <TextView
                            style="@style/general_button_icon_text_text"
                            android:text="@string/welcome_btn_ticket_technical_support" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/welcome_btn_ticket_development"
                        style="@style/general_button_icon_text_container">
                        <ImageView
                            style="@style/general_button_icon_text_icon"
                            android:src="@mipmap/ic_development" />
                        <TextView
                            style="@style/general_button_icon_text_text"
                            android:text="@string/welcome_btn_ticket_development" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/welcome_btn_ticket_networking"
                        style="@style/general_button_icon_text_container">
                        <ImageView
                            style="@style/general_button_icon_text_icon"
                            android:src="@mipmap/ic_networking" />
                        <TextView
                            style="@style/general_button_icon_text_text"
                            android:text="@string/welcome_btn_ticket_networking" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/welcomeTabSearchTicket"
                    style="@style/general_tabhost_content" >
                    <LinearLayout
                        android:id="@+id/welcome_btn_my_ticket_pending"
                        style="@style/general_button_icon_text_container">
                        <ImageView
                            style="@style/general_button_icon_text_icon"
                            android:src="@mipmap/ic_cenapred" />
                        <TextView
                            style="@style/general_button_icon_text_text"
                            android:text="@string/welcome_btn_my_ticket_pending" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/welcome_btn_search_ticket_number"
                        style="@style/general_button_icon_text_container">
                        <ImageView
                            style="@style/general_button_icon_text_icon"
                            android:src="@mipmap/ic_cenapred" />
                        <TextView
                            style="@style/general_button_icon_text_text"
                            android:text="@string/welcome_btn_search_ticket_number" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/welcome_btn_request_pending"
                        style="@style/general_button_icon_text_container">
                        <ImageView
                            style="@style/general_button_icon_text_icon"
                            android:src="@mipmap/ic_cenapred" />
                        <TextView
                            style="@style/general_button_icon_text_text"
                            android:text="@string/welcome_btn_request_pending" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/welcomeTabStadistics"
                    style="@style/general_tabhost_content" >
                    <LinearLayout
                        android:id="@+id/welcome_btn_stadistics_general"
                        style="@style/general_button_icon_text_container">
                        <ImageView
                            style="@style/general_button_icon_text_icon"
                            android:src="@mipmap/ic_cenapred" />
                        <TextView
                            style="@style/general_button_icon_text_text"
                            android:text="@string/welcome_btn_stadistics_general" />
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </TabHost>
</LinearLayout>
