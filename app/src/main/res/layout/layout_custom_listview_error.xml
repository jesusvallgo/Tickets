<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/general_layout_linear_horizontal_nomargin_match_wrap"
    android:padding="@dimen/error_padding_container"
    android:weightSum="15">

    <ImageView
        android:id="@+id/error_image"
        style="@style/error_imageview_icon"
        android:layout_weight="2" />
    <LinearLayout
        style="@style/error_layout_container"
        android:layout_weight="13">
        <TextView
            android:id="@+id/error_title"
            style="@style/error_textview_title" />
        <TextView
            android:id="@+id/error_description"
            style="@style/error_textview_description" />
    </LinearLayout>
</LinearLayout>