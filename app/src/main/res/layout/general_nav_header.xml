<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:paddingBottom="@dimen/nav_header_padding"
    android:background="@drawable/menu_user_bar"
    android:gravity="bottom"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/nav_img_avatar"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_vertical_space"
        android:contentDescription="@string/nav_user_image" />

    <TextView
        android:id="@+id/nav_txv_nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_vertical_space"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textAlignment="center" />
</LinearLayout>
