<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/general_button_text_radius" />
            <stroke android:width="@dimen/general_button_text_border" android:color="@color/general_button_text_border" />
            <gradient android:angle="90" android:endColor="@color/general_button_text_background_last" android:startColor="@color/general_button_text_background_first" android:type="linear" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/general_button_text_radius" />
