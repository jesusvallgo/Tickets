<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:dropDownListViewStyle">@style/general_dropdown_style</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- TamaÃ±os generales -->
    <style name="general_match_match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="general_match_wrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="general_wrap_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Layouts generales -->
    <style name="general_layout_relative_nomargin_match_match" parent="general_match_match">
    </style>

    <style name="general_layout_relative_nomargin_match_wrap" parent="general_match_wrap">
    </style>

    <style name="general_layout_linear_vertical_margin_match_match" parent="general_match_match">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_margin">@dimen/general_margin_size</item>
    </style>

    <style name="general_layout_linear_vertical_margin_match_wrap" parent="general_match_wrap">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_margin">@dimen/general_margin_size</item>
    </style>

    <style name="general_layout_linear_vertical_nomargin_match_match" parent="general_match_match">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="general_layout_linear_vertical_nomargin_match_wrap" parent="general_match_wrap">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="general_layout_linear_horizontal_nomargin_match_wrap" parent="general_match_wrap">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="general_layout_linear_charactersCount_action" parent="general_match_match">
        <item name="android:layout_width">0dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">bottom</item>
    </style>

    <!-- Elementos generales -->
    <style name="general_item_large" parent="general_match_wrap">
        <item name="android:textSize">@dimen/general_main_font_size</item>
    </style>

    <!-- TabHost (Content) generales -->
    <style name="general_tabhost_content" parent="general_layout_linear_vertical_margin_match_match">
        <item name="android:color">#FCFCFC</item>
    </style>

    <!-- Vistas generales -->
    <style name="general_view_vertical_divider">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/general_listview_divider</item>
    </style>

    <!-- TextView (Label) generales -->
    <style name="general_textview_large" parent="general_item_large">
        <item name="android:layout_marginTop">@dimen/general_item_vertical_space</item>
    </style>

    <style name="general_textview_characters_count" parent="general_match_wrap">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="general_textview_interface_subtitle" parent="general_item_large">
        <item name="android:layout_marginTop">@dimen/general_item_vertical_space</item>
        <item name="android:textSize">@dimen/general_main_font_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/general_textview_interface_subtitle</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="general_textview_link" parent="general_item_large">
        <item name="android:textSize">@dimen/general_main_font_size</item>
        <item name="android:textColor">@color/general_textview_link</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="general_textview_main" parent="general_item_large">
        <item name="android:layout_marginTop">@dimen/general_item_vertical_space</item>
        <item name="android:textSize">@dimen/general_main_font_size</item>
        <item name="android:textColor">@color/general_textview_main_text</item>
    </style>

    <style name="general_textview_description" parent="general_item_large">
        <item name="android:textSize">@dimen/general_description_font_size</item>
        <item name="android:textColor">@color/general_textview_description_text</item>
    </style>

    <!-- Elementos para Spinner general -->
    <style name="general_dropdown_style" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">@color/general_spinner_divider</item>
        <item name="android:dividerHeight">1dp</item>
    </style>
    <style name="general_spinner_large" parent="general_item_large">
        <item name="android:layout_marginTop">@dimen/general_item_vertical_space</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:dropDownVerticalOffset">35dp</item>
        <item name="android:background">@drawable/general_spinner</item>
    </style>
    <style name="general_spinner_text" parent="general_item_large">
        <item name="android:textColor">@color/general_textview_description_text</item>
        <item name="android:textSize">@dimen/general_main_font_size</item>
        <item name="android:padding">@dimen/general_padding_size</item>
    </style>
    <style name="general_spinner_dropdown" parent="general_spinner_text">
        <item name="android:textColor">@color/general_textview_description_text</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:background">@drawable/general_spinner_item</item>
    </style>

    <!-- EditText generales -->
    <style name="general_edittext_large" parent="general_item_large">
        <item name="android:layout_marginTop">@dimen/general_item_vertical_space</item>
        <item name="android:padding">@dimen/general_edittext_padding</item>
        <item name="android:background">@drawable/general_edittext</item>
    </style>

    <style name="general_edittext_multiline" parent="general_edittext_large">
        <item name="android:ems">10</item>
        <item name="android:lines">4</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <!-- Button generales -->
    <style name="general_button_large" parent="general_item_large">
        <item name="android:background">@drawable/general_button_text</item>
        <item name="android:textColor">@color/general_button_text_text</item>
    </style>

    <!-- Boton predeterminado -->
    <style name="general_button_only_text" parent="general_button_large">
        <item name="android:layout_marginTop">@dimen/general_button_vertical_space</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Elementos para boton personalizado de realizar accion -->
    <style name="general_button_only_icon" parent="general_wrap_wrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:padding">7dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:background">@drawable/general_button_text</item>
    </style>

    <!-- Elementos para boton personalizado de opciones en Fragments -->
    <style name="general_button_icon_text_container" parent="general_layout_linear_horizontal_nomargin_match_wrap">
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/general_button_icon_text</item>
        <item name="android:layout_marginTop">@dimen/general_margin_size</item>
        <item name="android:layout_marginBottom">@dimen/general_margin_size</item>
        <item name="android:padding">@dimen/general_padding_size</item>
        <item name="android:weightSum">10</item>
    </style>
    <style name="general_button_icon_text_icon" parent="general_match_wrap">
        <item name="android:layout_width">@dimen/general_none</item>
        <item name="android:layout_weight">1.5</item>
    </style>
    <style name="general_button_icon_text_text" parent="general_match_match">
        <item name="android:layout_width">@dimen/general_none</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/general_main_font_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/general_button_icon_text_text</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:layout_weight">8.5</item>
    </style>

    <!-- Elementos para mostrar mensajes -->
    <style name="message_imageview_icon">
        <item name="android:layout_width">@dimen/general_none</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="message_layout_container">
        <item name="android:layout_width">@dimen/general_none</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">15dp</item>
    </style>
    <style name="message_textview_title" parent="general_item_large">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/message_title_font_size</item>
    </style>

    <style name="message_textview_description" parent="general_item_large">
        <item name="android:textColor">@color/general_textview_description_text</item>
        <item name="android:textSize">@dimen/message_description_font_size</item>
    </style>

    <!-- Elementos para el Fragment de Loading -->
    <style name="loading_layout_container" parent="general_match_wrap">
        <item name="android:layout_centerVertical">true</item>
    </style>

    <!-- Elementos para el Fragment de Acerca de -->
    <style name="about_imageview_icon">
        <item name="android:src">@drawable/ic_cenapred</item>
        <item name="android:description">@string/about_imv_icon</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">25dp</item>
    </style>

    <style name="about_textview_large" parent="general_item_large">
        <item name="android:textSize">@dimen/general_main_font_size</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/general_margin_size</item>
    </style>

    <!-- Elementos para el Fragment de Login -->
    <style name="login_imageview_icon">
        <item name="android:src">@drawable/ic_app</item>
        <item name="android:description">@string/login_imv_icon</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/general_margin_size</item>
        <item name="android:layout_marginBottom">25dp</item>
    </style>
    <style name="login_edittext_credentials" parent="general_edittext_large">
        <item name="android:textColor">@color/general_edittext_text</item>
        <item name="android:layout_margin">@dimen/general_none</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!-- Cadenas para el Fragment de Crar reporte (Otro) -->
    <style name="report_new_other_edittex_description" parent="general_edittext_multiline">
        <item name="android:layout_width">@dimen/general_none</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>
    <style name="report_new_other_button_send" parent="general_button_only_icon">
        <item name="android:src">@mipmap/ic_send</item>
    </style>

    <!-- Elementos del Fragment de Buscar mis tickets pendientes -->
    <style name="my_ticket_pending_listview_action_container" parent="general_match_match">
        <item name="android:divider">@color/general_listview_divider</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="ticket_listview_action_item" parent="general_match_wrap">
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/general_padding_size</item>
    </style>

    <!-- Elementos del Fragment de Buscar reporte por numero de folio -->
    <style name="search_ticket_number_edittex_number" parent="general_edittext_large">
        <item name="android:layout_width">@dimen/general_none</item>
        <item name="android:layout_marginTop">@dimen/general_none</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">9</item>
    </style>
    <style name="search_ticket_number_button_search" parent="general_button_only_icon">
        <item name="android:layout_width">@dimen/general_none</item>
        <item name="android:src">@mipmap/ic_search</item>
    </style>

    <!-- Elementos para ListView del Fragment de Bitacora de Acciones -->
    <style name="report_view_history_listview_action_container" parent="general_match_match">
        <item name="android:layout_marginTop">@dimen/general_margin_size</item>
    </style>

    <style name="report_view_history_listview_action_item" parent="general_match_wrap">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_margin">@dimen/general_margin_size</item>
        <item name="android:padding">@dimen/general_padding_size</item>
        <item name="android:background">@drawable/history_listview_item</item>
    </style>

    <!-- Elementos del Fragment de Seguimiento de Ticket -->
    <style name="report_add_history_edittex_description" parent="general_edittext_multiline">
        <item name="android:layout_width">@dimen/general_none</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>
    <style name="report_add_history_button_send" parent="general_button_only_icon">
        <item name="android:src">@mipmap/ic_send</item>
    </style>
</resources>