<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Colores generales de Layout -->
    <color name="colorPrimary">#C01D20</color>
    <color name="colorPrimaryDark">#7F0F11</color>
    <color name="colorAccent">#C8494C</color>
    <color name="general_border_normal">#D2D2D2</color>

    <!-- Colores generales de Fuentes -->
    <color name="general_font_title">#C01D20</color>

    <!-- Colores para el menu principal -->
    <color name="menu_background_first">#DC5254</color>
    <color name="menu_background_center">#C01D20</color>
    <color name="menu_background_last">#7F0F11</color>

    <!-- Colores para Button personalizado -->
    <color name="general_button_icon_text_border">@android:color/black</color>
    <color name="general_button_icon_text_text">#444444</color>
    <color name="general_button_icon_text_background_first">#DFDFDF</color>
    <color name="general_button_icon_text_background_last">@android:color/transparent</color>

    <!-- Colores para Button predeterminado -->
    <color name="general_button_text_border">@android:color/black</color>
    <color name="general_button_text_text">#FFFFFF</color>
    <color name="general_button_text_background_first">#7F0F11</color>
    <color name="general_button_text_background_last">#C01D20</color>

    <!-- Colores para TabHost predeterminado -->
    <color name="general_tabhost_text_unselected">#C8FFFFFF</color>
    <color name="general_tabhost_text_selected">@android:color/white</color>

    <!-- Colores para Spinner predeterminado -->
    <color name="general_spinner_divider">@color/general_border_normal</color>
    <color name="general_spinner_item_background_normal">@android:color/white</color>
    <color name="general_spinner_item_background_focus">#F0F0F0</color>

    <!-- Colores para TextView predeterminado -->
    <color name="general_textview_interface_subtitle">@color/colorPrimaryDark</color>
    <color name="general_textview_main_text">@color/colorPrimary</color>
    <color name="general_textview_description_text">#444444</color>

    <!-- Colores para EditText predeterminado -->
    <color name="general_edittext_border_normal">@color/general_border_normal</color>
    <color name="general_edittext_border_focus">@color/colorPrimaryDark</color>
    <color name="general_edittext_background">@android:color/white</color>
    <color name="general_edittext_text">#444444</color>

    <!-- Colores para ListView predeterminado -->
    <color name="general_listview_background">#64BABABA</color>
    <color name="general_listview_divider">@android:color/transparent</color>
</resources>
