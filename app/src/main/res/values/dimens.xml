<resources>
    <!-- Dimensiones del menu de navegacion -->
    <dimen name="nav_header_height">160dp</dimen>
    <dimen name="nav_header_padding">16dp</dimen>
    <dimen name="nav_vertical_space">10dp</dimen>

    <!-- Interlineado general -->
    <dimen name="general_item_vertical_space">7dp</dimen>
    <dimen name="general_button_vertical_space">35dp</dimen>

    <!-- Dimension de tamaÃ±o nulo -->
    <dimen name="general_none">0dp</dimen>

    <!-- Dimension de los Margin general -->
    <dimen name="general_margin_size">10dp</dimen>

    <!-- Dimension de los Padding general -->
    <dimen name="general_padding_size">10dp</dimen>

    <!-- Dimension de Borde (Stroke) general -->
    <dimen name="general_border_size">1dp</dimen>

    <!-- Dimension de Radius general -->
    <dimen name="general_radius_size">5dp</dimen>

    <!-- Dimensiones de la Fuente general -->
    <dimen name="general_main_font_size">16sp</dimen>
    <dimen name="general_description_font_size">15sp</dimen>

    <!-- Dimensiones para ListView predeterminado -->
    <dimen name="general_listview_radius">@dimen/general_radius_size</dimen>

    <!-- Dimensiones para Button predeterminado -->
    <dimen name="general_button_icon_text_border">@dimen/general_border_size</dimen>
    <dimen name="general_button_icon_text_radius">@dimen/general_radius_size</dimen>

    <!-- Dimensiones para Button predeterminado -->
    <dimen name="general_button_text_border">@dimen/general_border_size</dimen>
    <dimen name="general_button_text_radius">@dimen/general_radius_size</dimen>

    <!-- Dimensiones para EditText predeterminado -->
    <dimen name="general_edittext_border">@dimen/general_border_size</dimen>
    <dimen name="general_edittext_radius">@dimen/general_radius_size</dimen>
    <dimen name="general_edittext_padding">15dp</dimen>

    <!-- Dimensiones para mostrar errores -->
    <dimen name="error_title_font_size">@dimen/general_main_font_size</dimen>
    <dimen name="error_description_font_size">@dimen/general_description_font_size</dimen>
    <dimen name="error_padding_container">@dimen/general_padding_size</dimen>
    <dimen name="error_padding_item">5dp</dimen>
</resources>
